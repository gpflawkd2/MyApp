@model ReflectionIT.Mvc.Paging.PagingList<MyApp.Models.Teacher>
@using ReflectionIT.Mvc.Paging

@{
    ViewBag.Title = "Home";
}
<div class="container">
    <div class="jumbotron">
        <h1>환영합니다</h1>
        <p>We are learning ASP.NET Core</p>
    </div>
</div>

@*<nav>
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>*@

<form method="get" class="form-inline">
    <input name="filter" class="form-control" value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon"></span>Search
    </button>
</form>

<h2>Our Teachers</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(p => p.Name)
            </th>
            <th>
                @Html.SortableHeaderFor(p => p.Class, "Class, Name")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Class</td>
            </tr>
        }
    </tbody>
</table>

@* Partial View 연동 *@

@await Html.PartialAsync("_Paging", Model)